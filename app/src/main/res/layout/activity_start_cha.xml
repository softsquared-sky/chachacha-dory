<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".src.chachacha.StartChaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/backBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onStartChaClick"
            app:srcCompat="@drawable/leftbtn" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="차차차 START"
            android:textColor="@color/appbarColor" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:text="몇명이야?"
                android:textColor="#4a4a4a  " />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/people1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="1~2명"
                        android:textColor="@color/moodTextColor" />

                    <Button
                        android:id="@+id/people2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="3~5명"
                        android:textColor="@color/moodTextColor" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/people3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="6~10명"
                        android:textColor="@color/moodTextColor" />

                    <Button
                        android:id="@+id/people4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="11~20명"
                        android:textColor="@color/moodTextColor" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/people5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="21~30명"
                        android:textColor="@color/moodTextColor" />

                    <Button
                        android:id="@+id/people6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:onClick="onClickPeople"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp"
                        android:text="30명 이상"
                        android:textColor="@color/moodTextColor" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="어떤 술집 가고싶어?"
                android:textColor="#4a4a4a  " />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:shrinkColumns="1"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_bar" />

                    <ImageView
                        android:id="@+id/chicken"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_chicken" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pizza"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_pizza" />

                    <ImageView
                        android:id="@+id/izakaya"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_izakaya" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/meat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_gogi" />

                    <ImageView
                        android:id="@+id/chinese"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_china" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_fish" />

                    <ImageView
                        android:id="@+id/pojangMacha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_pozang" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/koreanPancake"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_zun" />

                    <ImageView
                        android:id="@+id/porkLegs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_pigleg" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/hope"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_hope" />

                    <ImageView
                        android:id="@+id/fusionMeal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onClickKind"
                        app:srcCompat="@drawable/start_fusion" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="분위기는?"
                android:textColor="#4a4a4a  " />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:shrinkColumns="1"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/moodFree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#자유로운"
                        android:textColor="#ffff" />

                    <Button
                        android:id="@+id/moodComfort"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#편안한"
                        android:textColor="#ffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/moodDark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#어두운"
                        android:textColor="#ffff" />

                    <Button
                        android:id="@+id/moodCozy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#아늑한"
                        android:textColor="#ffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/moodActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#활기찬"
                        android:textColor="#ffff" />

                    <Button
                        android:id="@+id/moodQuiet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#조용한"
                        android:textColor="#ffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/moodDating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="#데이트하기 좋은"
                        android:textColor="#ffff" />

                    <Button
                        android:id="@+id/moodAnything"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border"
                        android:onClick="onClickMood"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="상관없음"
                        android:textColor="#ffff" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/startNextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/roundback_border"
                android:onClick="onStartChaClick"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp"
                android:text="다음"
                android:textColor="#ffff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>